{
  "name": "forum-app",
  "private": true,
  "version": "1.0.0",
  "description": "A full-stack forum app built in 2 versions, REST and GraphQL",
  "workspaces": [
    "./packages/rest-server",
    "./packages/rest-client",
    "./packages/gql-server",
    "./packages/shared/types",
    "./packages/shared/validation"
  ],
  "scripts": {
    "start:rest-server": "cd ./packages/rest-server && npm start",
    "start:rest-client": "cd ./packages/rest-client && npm start",
    "husky:prepare": "cd .. && husky install ./forum-app/.husky",
    "format:check": "prettier --ignore-unknown --check .",
    "format:fix": "prettier --ignore-unknown --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "lint-staged": "^13.2.0"
  },
  "lint-staged": {
    "**/*": "npm run format:fix --",
    "*.{js,ts,jsx,tsx}": "npm run lint:fix --"
  }
}
